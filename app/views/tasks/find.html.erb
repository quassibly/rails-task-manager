<h1><%= @task.title %></h1>

<p class="details"><%= @task.details %></p>

<p>
  <% if @task.completed %>
    <i class="far fa-check-square"></i> This task is completed
  <% else %>
    <i class="far fa-square"></i> This task is not completed yet
  <% end %>
</p>

<p><%= link_to "Edit this task", task_edit_path(@task) %></p>
<p><%= link_to "Return to task list", tasks_path %></p>
